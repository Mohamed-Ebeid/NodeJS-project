<h6>Dashboard<h6>
<h7>Welcome {{name}}</h7>
<p>Your stories:</p>
{{#if stories }}
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Date</th>
				<th>Status</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{{#each stories}}
				<tr>
					<td><a href="/stories/{{_id}}">{{title}}</a></td>
					<td>{{formatDate createdAt 'DD-MMM-YY, h:mm:ss a'}}</td>
					<td><span class="dash-status">{{status}}</span></td>
					<td>
						<a href="/stories/edit/{{_id}}" class="btn btn-float">
                    <i class="fas fa-edit">Edit</i> </a>

	                <form action="/stories/{{_id}}" method="POST" id="delete-form">
	                    <input type="hidden" name="_method" value="DELETE">
	                    <button type="submit" class="btn red">
	                        <i class="fas fa-trash">Delete</i>
	                    </button>
                	</form>
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
{{else}}
	<p>You have no stories</p>
{{/if}}